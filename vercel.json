{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "env": {
    "NEXT_SANITY_API_TOKEN": "@tunderadev_sanity_api_token",
    "NEXT_SANITY_PREVIEW_SECRET": "@tunderadev_sanity_preview_secret",
    "NEXT_DATABASE_URL": "@tunderadev_database_url",
    "NEXT_FORMSPREE_MAILCHIMP_API_KEY": "@tunderadev_formspree_mailchimp_api_key"
  },
  "build": {
    "env": {
      "NEXT_SANITY_API_TOKEN": "@tunderadev_sanity_api_token",
      "NEXT_SANITY_PREVIEW_SECRET": "@tunderadev_sanity_preview_secret",
      "NEXT_DATABASE_URL": "@tunderadev_database_url"
    }
  },
  "rewrites": [
    { 
      "source": "/metrics", 
      "destination": "https://metrics.tundera.dev" 
    }
  ]
}
